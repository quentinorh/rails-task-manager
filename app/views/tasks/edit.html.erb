<h1>Edit task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title, :class => "mt-4 form-label" %>
  <%= f.text_field :title, :class => "form-control" %>
  <%= f.label :details, :class => "mt-4 form-label" %>
  <%= f.text_field :details, :class => "form-control" %>
  <%= f.label :completed, :class => "mt-4 form-label" %>
  <%= f.check_box :completed, :class => "mt-4 form-check-input" %>
  <br>
  <%= f.submit :class => "mt-4 btn btn-primary" %>
<% end %>
