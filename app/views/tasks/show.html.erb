<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<%= link_to "Edit task", edit_task_path, :class => "btn btn-primary" %>
<%= link_to "Delete",
  task_path(@task),
  :class => "btn btn-danger",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path, :class => "btn btn-secondary" %>
